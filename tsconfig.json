{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ES2022",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    }
}
